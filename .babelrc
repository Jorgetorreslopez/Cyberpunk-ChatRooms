{
  "presets": [

    ["@babel/env",
      {
        "targets": {
          "edge": "17",
          "firefox": "60",
          "chrome": "67",
          "safari": "11.1"
        }
      }
    ],
    "@babel/preset-react"
  ],
  "plugins": [
    ["@babel/plugin-transform-private-methods", {
       "loose": true,
       "legacy": true
    }],
    ["@babel/plugin-proposal-decorators", {
      "legacy": true,
      "loose": false
    }],
    ["@babel/plugin-proposal-class-properties", {
      "loose": true,
      "legacy": true
    }],
    ["@babel/plugin-syntax-dynamic-import", {
      "legacy": true,
      "loose": true
    }]
      ]
}